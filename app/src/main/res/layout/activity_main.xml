<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e7bedf"

    tools:context="com.example.schou.push.MainActivity">


    <Button
        android:id="@+id/activeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:width="500dp"
        android:height="60dp"
        android:background="#e157c6"
        android:onClick="onClick"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/messageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:width="500dp"
        android:height="65dp"
        android:textSize="24dp"
        android:onClick="onClick"
        android:layout_above="@+id/groupButton"
        android:layout_alignParentStart="true" />

    <Button
    android:id="@+id/groupButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Groups"
    android:width="500dp"
    android:height="65dp"
        android:textSize="24dp"
    android:onClick="onClick"
        android:layout_above="@+id/activeButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:text="P.U.S.H."
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/speechbubble"
        android:id="@+id/imageView"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/groupButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Preventing Unwanted Social Harassment"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />
</RelativeLayout>
